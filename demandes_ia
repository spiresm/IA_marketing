      <label>Description du besoin :<textarea name="description" rows="6" required></textarea></label>
      <button type="submit">Envoyer la demande</button>
    </form>
    <p id="confirmation"></p>
  </div>

  <script>
    document.getElementById('demandeIA').addEventListener('submit', async function(e) {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);

      const res = await fetch('/.netlify/functions/sendRequest', {
        method: 'POST',
        body: formData
      });

      const result = await res.json();
      document.getElementById('confirmation').textContent = result.message;
    });
  </script>
